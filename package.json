{
  "name": "pt-coupons-extension",
  "version": "0.0.19",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.config.js --mode production",
    "build-clean": "npm run clean && npm run build",
    "watch": "npm run clean && webpack --config webpack.config.js --mode production --watch",
    "serve": "webpack serve --config webpack.config.js --mode production",
    "test": "echo \"No tests\"",
    "xpi": "web-ext build -s ./dist -a artifacts --overwrite-dest",
    "crx": "chromium --pack-extension=dist && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt_coupon_clipper-$(cat VERSION).crx",
    "crx-update": "chromium --pack-extension=./dist --pack-extension-key=./dist.pem && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt_coupon_clipper-$(cat VERSION).crx",
    "all": "npm run clean && npm run build && npm run xpi && npm run crx-update",
    "clean": "rm -rvf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.0.293",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "bootstrap": "^5.3.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.7",
    "react-dom": "^19.0.0",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "semantic-release": "^24.2.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "web-ext": "^8.3.0",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}