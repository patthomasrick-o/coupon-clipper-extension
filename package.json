{
  "name": "pt-coupons-extension",
  "version": "0.0.27",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "all": "npm run clean && npm run build && npm run xpi && npm run crx-update",
    "build": "npx vite build",
    "build-clean": "npm run clean && npm run build",
    "clean": "rm -rvf dist",
    "crx": "chromium --pack-extension=dist && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt_coupon_clipper-$(cat VERSION).crx",
    "crx-update": "chromium --pack-extension=./dist --pack-extension-key=./dist.pem && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt_coupon_clipper-$(cat VERSION).crx",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npx jest",
    "watch": "npm run build -- --watch",
    "xpi": "web-ext build -s ./dist -a artifacts --overwrite-dest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
