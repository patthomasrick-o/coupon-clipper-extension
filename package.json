{
  "name": "pt-coupons-extension",
  "version": "0.0.26",
  "description": "",
  "main": "index.js",
  "scripts": {
    "all": "npm run clean && npm run build && npm run xpi && npm run crx-update",
    "build": "webpack --config webpack.config.js --mode production",
    "build-clean": "npm run clean && npm run build",
    "clean": "rm -rvf dist",
    "crx": "chromium --pack-extension=dist && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt_coupon_clipper-$(cat VERSION).crx",
    "crx-update": "chromium --pack-extension=./dist --pack-extension-key=./dist.pem && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt_coupon_clipper-$(cat VERSION).crx",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "serve": "webpack serve --config webpack.config.js --mode production",
    "test": "npx jest",
    "watch": "webpack --config webpack.config.js --mode production --watch",
    "xpi": "web-ext build -s ./dist -a artifacts --overwrite-dest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.0.293",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.14",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "bootstrap": "^5.3.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-webpack-plugin": "^4.2.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.7",
    "react-dom": "^19.0.0",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "semantic-release": "^24.2.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "web-ext": "^8.3.0",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
