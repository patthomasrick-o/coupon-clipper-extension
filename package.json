{
  "name": "pt-coupons-extension",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.config.js --mode production",
    "watch": "webpack --config webpack.config.js --mode production --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "xpi": "npm run build && web-ext build -s ./dist -a artifacts --overwrite-dest",
    "crx": "chromium --pack-extension=dist && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt-coupons.crx",
    "crx-update": "chromium --pack-extension=./dist --pack-extension-key=./dist.pem && mkdir -p ./artifacts && mv dist.crx ./artifacts/pt-coupons.crx",
    "clean": "rm -rvf artifacts dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.0.293",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "copy-webpack-plugin": "^12.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "web-ext": "^8.3.0",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
