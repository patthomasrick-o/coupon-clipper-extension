{
  "manifest_version": 3,
  "name": "React TypeScript Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension built with React and TypeScript",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "permissions": ["storage"]
}
