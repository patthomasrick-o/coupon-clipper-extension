{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "outDir": "dist/js",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "typeAcquisition": {
    "include": ["lodash", "jest"]
  },
  "include": ["src"],
  "exclude": ["...", "node_modules/**/*"]
}
